<?xml version="1.0" encoding="UTF-8"?>
<policyconfig>
    <action id="in.tari.lampswitch.services">
        <description>Change state of Web services</description>
        <message>System policy prevented changing state of Web services</message>
        <defaults>
            <allow_any>yes</allow_any>
            <allow_inactive>yes</allow_inactive>
            <allow_active>yes</allow_active>
        </defaults>
        <annotate key="org.freedesktop.policykit.exec.path">@CMAKE_INSTALL_FULL_DATADIR@/lampswitch/services.sh</annotate>
    </action>
</policyconfig>
